# EditorConfig for WP Link Sweeper
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

# PHP files
[*.php]
indent_style = tab
indent_size = 4

# JavaScript files
[*.js]
indent_style = tab
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# CSS files
[*.css]
indent_style = tab
indent_size = 4

# SQL files
[*.sql]
indent_style = tab
indent_size = 4
